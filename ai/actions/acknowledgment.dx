type: action
name: acknowledgment
description: "Simple acknowledgment for terminal actions that require minimal feedback"
version: 1.0
completion_behavior: auto_final

# LLM Integration - for quick confirmations
ai:
  when_to_use: "When user requests a simple action that just needs confirmation (like setting reminders, quick updates, simple commands)"
  examples:
    - "set a reminder to call jeff at 12pm"
    - "mark that task as done"
    - "save this note"
    - "update my status to busy"
    - "delete that old record"
    - "archive this conversation"
  effect: write
  priority: low
  tags: ["acknowledgment", "terminal", "confirmation", "simple"]

# Simple implementation - just return confirmation
implementation:
  type: dsl_logic
  logic:
    steps:
      # Phase 1: Process the simple action (placeholder for now)
      - action: python
        code: |
          # For now, just acknowledge the request
          # In the future, this could dispatch to actual action handlers
          result = {
              'action_processed': True,
              'confirmation_message': f"âœ“ Done: {input.request}",
              'action_type': 'simple_acknowledgment'
          }
        store_as: action_result
        
      # Phase 2: Return minimal acknowledgment
      - action: return_final_answer
        answer: "{action_result.confirmation_message}"
        response_type: "acknowledgment"
        layout_hint: "ack"
        response_data: "{action_result}"

# Simple input schema
input_schema:
  type: object
  properties:
    request:
      type: string
      description: "Simple action request that needs acknowledgment"
      examples: 
        - "set a reminder to call jeff at 12pm"
        - "mark task as complete"
        - "save this note"
      minLength: 3
  required: ["request"]

# Minimal output schema
output_schema:
  type: object
  properties:
    success:
      type: boolean
      description: "Whether the action was processed"
    confirmation_message:
      type: string
      description: "Brief confirmation message"
    action_type:
      type: string
      description: "Type of action that was processed"
  required: ["success", "confirmation_message"]

# No approval needed - simple confirmations
requires_approval: false
permissions: ["actions:basic"]