type: report
name: players_over_time
title: Players Over Time
source: player
fields:
  - id
  - username
  - email
  - created_at

options:
  pagination: true
  page_size: 25
  sortable: true
  default_sort:
    field: created_at
    order: desc

charts:
  - id: signups_over_time
    title: Player Signups Over Time
    type: bar
    x: created_at
    y: id
    aggregate: count
    time_bucket: month

filters:
  - field: created_at
    type: date
    operator: between
    label: Signup Date
