type: integration
name: slack_notify
description: "Send notifications to Slack channels"
service: slack
endpoint: "https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXXXXXX"
method: POST

auth:
  type: webhook
  env_var: "SLACK_WEBHOOK_URL"

request_mapping:
  text: "{{message}}"
  channel: "{{channel}}"
  username: "Playbook CRM"
  icon_emoji: ":robot_face:"

# Future: response_mapping would go here
# For webhooks, we typically don't process responses